<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gojek"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:rowCount="2"
        android:columnCount="2"
        >

        <ImageView
            android:id="@+id/gomart"
            android:layout_width="78dp"
            android:layout_height="78dp"
            app:srcCompat="@drawable/menu_gomart" />

        <ImageView
            android:id="@+id/goride"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gomart"
            app:srcCompat="@drawable/menu_goride" />


        <ImageView
            android:id="@+id/gofood"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/menu_gofood" />

        <ImageView
            android:id="@+id/gosend"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/menu_gosend" />

    </GridLayout>

</RelativeLayout>